{% import 'components/_toast.html.twig' as macro_toast %}

<!DOCTYPE html>
<html lang="fr">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="A simple application to manage your business">
        <meta name="author" content="cr7t3k">

        <title>{% block title %}{% endblock %}</title>

        <link
                href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
                rel="stylesheet"
        >

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    {% block body %}
    <body id="page-top">

        <!-- Messages Flash Toast -->
        <div style="position: fixed; bottom: 10px; right: 5px; z-index: 10">
            {% for toast in app.flashes('toast') %}
                    {{ macro_toast.toast(toast.style, toast.title, toast.message) }}
            {% endfor %}
        </div>
        <!-- End of Messages Flash Toast -->

        <!-- Page Wrapper -->
        <div id="wrapper">
            {% block wrapper %}
                {% include 'components/_left_panel.html.twig' %}

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">
                    <div id="content">
                        {% include 'components/_navbar.html.twig' %}
                        {% block main_content %}{% endblock %}
                    </div>
                    {% block footer %}{% include 'components/_footer.html.twig' %}{% endblock %}
                </div>
                <!-- End of Content Wrapper -->

            {% endblock %}
        </div>
        <!-- End of Page Wrapper -->

        {% include 'components/_logout_modal.html.twig' %}
    </body>
    {% endblock %}

</html>
