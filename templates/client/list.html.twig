{% extends 'base.html.twig' %}

{% block title %}{{ 'page_title.client.list.main'|trans }}{% endblock %}

{% block main_content %}
    <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-2 text-gray-800">{{ 'page_title.client.list.second'|trans }}</h1>
            <a href="#" class="btn btn-success"><i class="fas fa-plus"></i> {{ 'common.button.new'|trans }} Projet</a>
        </div>

        <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    {{ 'client.stats.nbr'|trans }}
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ clients|length }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">{{ 'client.table.title'|trans }}</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table border border-top-0 table-striped" id="dataTable" width="100%" cellspacing="0">
                                <thead class="bg-primary text-white">
                                <tr>
                                    <th>{{ 'client.table.name'|trans }}</th>
                                    <th>{{ 'client.table.contact'|trans }}</th>
                                    <th>{{ 'client.table.tel'|trans }}</th>
                                    <th>{{ 'client.table.email'|trans }}</th>
                                    <th>{{ 'common.actions'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for client in clients %}
                                    <tr>
                                        <td class="text-dark">{{ client.name }}</td>
                                        <td>{{ client.contact }}</td>
                                        <td>{{ client.phone }}</td>
                                        <td>{{ client.email }}</td>
                                        <td>
                                            <button class="btn btn-datatable"><a href="{{ path('app_client_view', {'name': client.name}) }}" class="text-secondary" data-toggle="tooltip" data-placement="auto" title="{{ 'common.button.view'|trans }}"><i class="fas fa-eye"></i></a></button>
                                            <button class="btn btn-datatable"><a href="{{ path('app_client_edit', {'name': client.name}) }}" class="text-primary" data-toggle="tooltip" data-placement="auto" title="{{ 'common.button.edit'|trans }}"><i class="fas fa-pen"></i></a></button>
                                            <form method="post" class="d-inline-block" name="delete-client" action="{{ path('app_client_delete', {'name': client.name}) }}">
                                                <button type="submit" class="btn btn-datatable"><a href="" class="text-danger" data-toggle="tooltip" data-placement="auto" title="{{ 'common.button.delete'|trans }}"><i class="fas fa-trash"></i></a></button>
                                                <input type="hidden" name="delete-action" value="{{ csrf_token('delete-action') }}">
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}