{% macro toast(type, title, message) %}

    {% set class = null %}
    {% set icon = null %}
    {% if type == 'success' %}
        {% set class = 'toast-success' %}
        {% set icon = 'far fa-check-circle' %}
    {% elseif type == 'error' %}
        {% set class = 'toast-error' %}
        {% set icon = 'fas fa-exclamation-triangle' %}
    {% endif %}

    <div class="toast bg-light" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
        <div class="toast-header {{ class }}">
            <i class="mr-2 {{ icon }}"></i>
            <strong class="mr-auto pr-4">{{ title|trans }}</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            {{ message|trans }}
        </div>
    </div>
{% endmacro %}


