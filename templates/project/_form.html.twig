{{ form_start(form) }}
<div class="row">
    <div class="col-xl-6">
        <div class="card mb-4 mb-xl-0">
            <div class="card-header font-weight-bold text-primary">{{ 'project.title'|trans }}</div>
            <div class="card-body">
                <div class="row gx-3 mb-3">
                    <div class="col-md-6">
                        {{ form_label(form.name,  'project.name'|trans, { 'label_attr': {'class': 'small mb-1'} }) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.client, 'project.client'|trans, { 'label_attr': {'class': 'small mb-1'} }) }}
                        {{ form_widget(form.client, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-12">
                        {{ form_label(form.contactChannel, 'project.contactChannel'|trans, { 'label_attr': {'class': 'small mb-1'} }) }}
                        {{ form_widget(form.contactChannel, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                {{ form_widget(form.submit, {'label': 'common.save'|trans, 'attr': {'class': 'btn btn-primary'}}) }}

            </div>
        </div>
    </div>
</div>
{{ form_end(form)}}